@using System.Globalization
@model inmobiliaria_AT.Models.Pago

@{
    ViewData["Title"] = "Editar Pago " + Model.Id ;
    int? id = Model == null ? 0 : Model.Id;
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <!-- Mostrar el número de pago -->
                    <div class="mb-3">
                        <h5>Número de Pago: @ViewBag.NumeroPago</h5>
                    </div>

                    <form asp-action="Editar" method="post">
                        <!-- Asegúrate de pasar el ID del pago a editar -->
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Contrato" class="form-label">Contrato</label>
                            <select asp-for="Contrato.Id"
                                asp-items="@(ViewBag.Contratos ?? new SelectList(Enumerable.Empty<SelectListItem>()))"
                                class="form-control select2">
                                <option value=" ">Seleccione un contrato</option>
                            </select>
                            <span data-select2-id="@ViewBag.contratoSeleccionado.Id" asp-validation-for="Contrato.Id"
                                class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Monto" class="form-label">Monto</label>
                            <input asp-for="Monto" class="form-control" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>


                        <div class="form-group mb-3">
                            <label asp-for="Fecha" class="form-label">Fecha</label>
                            <input type="date" asp-for="Fecha" class="form-control" readonly/>
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>

                        <!-- Campo Detalle -->
                        <div class="form-group mb-3">
                            <label asp-for="Detalle" class="form-label">Detalle</label>
                            <textarea asp-for="Detalle" class="form-control"></textarea>
                            <span asp-validation-for="Detalle" class="text-danger"></span>
                        </div>

                        <!-- Botón de Guardar -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        // Inicializa Select2
        $('.select2').select2({
            placeholder: "Seleccione una opción",
            allowClear: true,
            width: '100%',
            minimumResultsForSearch: 0 // Activa la búsqueda siempre
        });

        // Obtener el ID del contrato preseleccionado desde el servidor (ViewBag)
        var contratoSeleccionado = "@ViewBag.contratoSeleccionado.Id"; // Valor preseleccionado

        // Si hay un contrato preseleccionado, establecerlo en el dropdown
        if (contratoSeleccionado) {
            $('select[asp-for="Contrato.Id"]').val(contratoSeleccionado).trigger('change'); // Usa el selector adecuado
        }


        $('select[asp-for="Contrato.Id"]').on('change', function () {
            var contratoId = $(this).val(); // Obtiene el valor seleccionado
            // Puedes hacer algo con contratoId aquí, si es necesario
            console.log("Contrato seleccionado: " + contratoId); // Para depurar
        });

    });
</script>


<!-- Scripts de validación -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
<link rel="stylesheet" href="../../css/pago.css">
