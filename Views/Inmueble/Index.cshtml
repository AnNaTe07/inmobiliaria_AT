@model IEnumerable<inmobiliaria_AT.Models.Inmueble>
@{
        ViewData["Title"] = "Lista de Inmuebles";
 }
 <div class="text-center">
    <h1 class="display-4">Lista de Inmuebles</h1>
 </div>
 <table class="table">
    <thead>
        <th>
            Código
        </th>        
        <th>
            @Html.DisplayNameFor(model =>model.Uso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    <a href="/Inmueble/Editar/@item.Id"></a>
                    <form action="@Url.Action("Editar", new{id=item.Id})"    method="get" style="display: inline;">
                        <button type="submit" class="btn btn-warning btn-custom" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </button>
                    </form>
                    <a href="/Inmueble/Detalle/@item.Id"></a>
                    <form action="@Url.Action("Detalle", new{id=item.Id})" method="get" style="display: inline;">
                        <button type="submit" class="btn btn-info btn-custom" title="Detalles">
                            <i class="fa-solid fa-circle-info"></i>
                        </button>
                    </form>
                     <button type="submit" class="btn btn-danger btn-custom" onclick="eliminar(@item.Id, `@item.Tipo`, `@item.Direccion`, `@item.Precio`)" title="Eliminar">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
            }
            <td>
                <button type="button" class="btn btn-ligth">
                    <a href="/Inmueble/Editar" title="Agregar Inmueble">
                    <i class="fa-duotone fa-solid fa-plus"></i>
                    </a>
                </button>       
        </td>
    </tbody>      
 </table>

 <div class="modal fade" id="modal_eliminar_inmueble" tabindex="-1" aria-labelledby="modal_eliminar_inmuebleLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal_eliminar_inmuebleLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-action="Eliminar" id="form_eliminar_inmueble">
                <div class="modal-body">
                    <input type="hidden" name="Id" value="" id="inmueble_eliminar_id">
                    <p> <span id="inmueble_eliminar_tipo"></span> <span id="inmueble_eliminar_direccion"></span> <span id="inmueble_eliminar_precio"></span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger"> Confirmar</i></button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="modal fade" id="modal_success_message" tabindex="-1" aria-labelledby="modalSuccessMessageLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>@TempData["SuccessMessage"]</p>
                </div>
            </div>
        </div>
    </div>
}

 @section Scripts{
    <script>
        $(document).ready(function() {
            // Muestro el modal de éxito si existe un mensaje en TempData
            if ($('#modal_success_message').length) {
                $('#modal_success_message').modal('show');
                // Oculto el modal después de 3 segundos
                setTimeout(function() {
                    $('#modal_success_message').modal('hide');
                }, 3000);
            }
        });

        function eliminar(id, tipo, direccion, precio){//direccion, uso, tipo
            document.querySelector("#inmueble_eliminar_id").value=id;
            document.querySelector("#inmueble_eliminar_tipo").innerText=tipo + ", ";
            document.querySelector("#inmueble_eliminar_direccion").innerText=direccion + ", Precio: ";            
            document.querySelector("#inmueble_eliminar_precio").innerText= precio;
            $("#modal_eliminar_inmueble").modal("show");
        }
    </script>
 }