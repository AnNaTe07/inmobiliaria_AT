@model IEnumerable<inmobiliaria_AT.Models.Inmueble>

<table class="table text-center mt-3">
    <thead>
        <tr>
            <th>Código</th>
            <th>Dirección</th>
            <th>Tipo</th>
            <th>Ambientes</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Suspendido</th>
            <th>Activar / Desactivar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inmueble in Model)
        {
            <tr>
                <td>@inmueble.Id</td>
                <td>@inmueble.Direccion</td>
                <td>@inmueble.TipoDescripcion</td>
                <td>@inmueble.Ambientes</td>
                <td>$ @inmueble.Precio</td>
                @* <td>@(inmueble.Estado ? "Disponible" : "No Disponible")</td> *@
                <td>
                    @if (inmueble.Estado)
                    {
                        <span style="color: rgb(26, 163, 26);">
                            <i class="fas fa-check estado-true"></i>
                        </span>
                    }
                    else
                    {
                        <span style="color: red;">
                            <i class="fas fa-times estado-false"></i>
                        </span>
                    }
                </td>
                <td>@(inmueble.Suspendido ? "Sí" : "No")</td>
                <td>
                    @if (inmueble.Suspendido)
                    {
                        <button type="button" class="btn btn-success" onclick="reactivar(@inmueble.Id)" title="Reactivar">
                            <i class="fa-solid fa-play"></i>
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-warning" onclick="suspender(@inmueble.Id)" title="Suspender">
                            <i class="fa-solid fa-pause"></i>
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
